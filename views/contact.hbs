    color: #fff;
    text-align: center;
    padding: 50px;
}
.intro-infor::after {
    content: '';
    width: 100%;
    height: 100%;
    top: -20%;
    left: 0;
    background: rgba(0, 0, 0, 0.3);
    position: absolute;
    /* filter: blur(5px); */
    
}
.intro-infor * {
    z-index: 1;
}
.intro-infor h1 {
    margin: 50px auto;
    font-size: 50px;
}
.intro-infor p {
    margin: 50px auto;
    font-size: 25px;
    inline-size: 800px;
}
.intro-infor a {
    width: 200px;
    margin: 50px auto;
    height: 60px;
    background: #F8ED3B;
    font-size: 30px;
    display: grid;
    place-items: center;
    text-decoration: none;
    color: #333;
    cursor: pointer;
}
.intro-infor a:hover {
    transform: scale(1.1);
  
